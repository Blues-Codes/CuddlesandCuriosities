{{#if user}}
<h1>Hi {{username}}!</h1>

<div id="finished-products">
    <h2>Show off</h2>
    
<form action="/members/member-profile" method="POST" enctype="multipart/form-data">

<label for="">Name</label>
<input type="text" name="name">

<label for="">Description</label>
<input type="text" name="description">

<label for="">Media</label>
<input type="file" name="imageUrl">

<button type="submit">SHOW OFF</button>
</form>

{{#each foundPost}}
   <p> {{name}} </p>
    <p> {{description}} </p>
    <img src="{{imageUrl}}"/>
<form action="/members/deletepost/{{_id}}" method ="POST">
<button type="submit">DELETE</button>
</form>
{{/each}}
</div>
